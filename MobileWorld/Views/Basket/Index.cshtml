<script id="data-template" type="x-tmpl-mustache">
    <tr class="cart_item">
        <td class="product-remove">
            <a title="Remove this item" data-catalogid="{{catalogid}}" class="remove">×</a>
            @*<a style="margin-top: 4px" title="Remove this item" data-userid="{{userid}}" data-catalogid="{{catalogid}}" class="remove">×</a>*@
        </td>
        <td class="product-thumbnail">
            <a href="{{pictureuri}}"><img width="145" alt="poster_1_up" class="shop_thumbnail" src="{{pictureuri}}"></a>
        </td>
        <td class="product-name" style="width: 200px;">
            <a href="/Detail/Index/{{catalogid}}">{{catalogname}}</a>
        </td>
        <td class="product-price">
            <span class="amount{{catalogid}}">{{price}} VNĐ</span>
        </td>
        <td class="product-quantity" style="padding: 0;">
            <div class="quantity buttons_added">
                <input type="button" data-price="{{price}}" data-catalogid="{{catalogid}}" onclick="controller.changeQuantity($(this))" class="minus" value="-">
                <input type="number" readonly size="2" title="Qty" id="quantity{{catalogid}}" value="{{unit}}" min="0" max="10" step="1">
                <input type="button" data-price="{{price}}" data-catalogid="{{catalogid}}" onclick="controller.changeQuantity($(this), 1)" class="plus" value="+">
            </div>
        </td>
        <td class="product-subtotal">
            <span class="cost{{catalogid}}">{{cost}} VNĐ</span>
        </td>
    </tr>
</script>
@section ClientScript{
    <script src="/Assets/admin/js/plugins/mustache.min.js"></script>
    <script>
        var state = [];
        var controller = {
            init: () => {
                controller.loadData();
            },
            registerEvent: () => {
                $('#btnUpdate').off('click').on('click', function () {
                    controller.updateBasket();
                });
                $('.remove').off('click').on('click', function () {
                    controller.deleteCatalog(parseInt($(this).data('catalogid')));
                });
            },
            deleteCatalog: (catalogid) => {
                $.ajax({
                    url: '/Basket/DeleteOnCart',
                    type: 'GET',
                    data: { catalogid: catalogid },
                    dataType: 'json',
                    success: (res) => {
                        var msg = '';
                        if (res.status) {
                            msg = 'Xóa thành công!';
                            state.splice(0, state.length);
                            controller.loadData();
                        } else {
                            msg = 'Xóa thất bại!';
                        }
                        bootbox.alert(msg);
                        setTimeout(() => {
                            bootbox.hideAll();
                        }, 1500);
                    }
                });
            },
            changeQuantity: (selector, opeator = 0) => {
                var catalogid = selector.data('catalogid');
                var price = parseInt(selector.data('price').split('.').join(''));
                var quantity = parseInt($(`#quantity${catalogid}`).val());
                if (opeator == 1) {
                    if (quantity < 10) {
                        $(`#quantity${catalogid}`).val(quantity += 1);
                        $(`.cost${catalogid}`).html(formatCurrency(price * quantity) + ' VNĐ');
                    }
                } else {
                    if (quantity > 1) {
                        $(`#quantity${catalogid}`).val(quantity -= 1);
                        $(`.cost${catalogid}`).html(formatCurrency(price * quantity) + ' VNĐ');
                    }
                }
                state.forEach((item) => {
                    if (item.catalogid == catalogid) {
                        item.unit = quantity;
                    }
                });
            },
            loadData: () => {
                $.ajax({
                    url: '/Basket/LoadData',
                    type: 'GET',
                    data: {},
                    dataType: 'json',
                    success: (res) => {
                        var html = '';
                        var template = $('#data-template').html();
                        $.each(res.data, function (i, item) {
                            state.push({
                                catalogid: item.catalogid,
                                unit: item.unit
                            });
                            html += Mustache.render(template, {
                                catalogid: item.catalogid,
                                pictureuri: item.pictureuri,
                                catalogname: item.catalogname,
                                price: formatCurrency(item.price),
                                unit: item.unit,
                                cost: formatCurrency(item.price * item.unit)
                            });
                        });
                        $('#tblData').html(html);
                        controller.registerEvent();
                    },
                    error: (err) => {
                        console.log(err);
                    }
                });
            },
            updateBasket: () => {
                $.ajax({
                    url: '/Basket/UpdateBasket',
                    type: 'POST',
                    data: {
                        model: JSON.stringify(state)
                    },
                    dataType: 'json',
                    success: (res) => {
                        var msg = '';
                        if (res.status) {
                            msg = 'Cập nhật giỏ hàng thành công!';
                        } else {
                            msg = 'Cập nhật giỏ hàng thất bại!';
                        }
                        bootbox.alert(msg);
                        setTimeout(() => {
                            bootbox.hideAll();
                        }, 1500);
                    },
                    error: (err) => {
                        console.log(err);
                    }
                });
            }
        }
        controller.init();
        const formatCurrency = (n, separate = ".") => {
            var s = n.toString();
            var regex = /\B(?=(\d{3})+(?!\d))/g;
            var ret = s.replace(regex, separate);
            return ret;
        }
    </script>
}


