@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="loginBox">
    <img src="/Assets/login/user.png" class="user">
    <h2>Đăng nhập</h2>
    <form id="formData">
        <p>Tài khoản</p>
        <input id="txtUsername" type="text" value="tuandz" name="username" placeholder="Nhập tài khoản">
        <p>Mật khẩu</p>
        <input id="txtPassword" type="password" value="tuandz" name="password" placeholder="Nhập mật khẩu">
    </form>
    <button id="btnSign" class="btn btn-primary btn-block">Đăng nhập</button>
    <a href="/Login/LoginFacebook" style="color: white;" id="btnSignFb" class="btn btn-primary btn-block"><i class="fab fa-facebook-f"></i> Đăng nhập với Facebook</a>
    <p style="margin-top: 5px">Chưa có? <a href="/Login/Register">Đăng kí</a></p>
    <p><a href="/Login/Forgot">Quên mật khẩu?</a></p>
</div>
@section  ClientScript{
    <script src="~/Assets/web/controller/loginController1.js"></script>
}