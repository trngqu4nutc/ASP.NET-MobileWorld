<!doctype html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng kí</title>
    <link href="/Assets/admin/css/sb-admin.css" rel="stylesheet">
    <link rel="stylesheet" href="/Assets/login/style.css">
</head>
<body>
    <div class="loginBox" style="height: 600px">
        <img src="/Assets/login/user.png" class="user">
        <h2>Đăng kí</h2>
        <form id="formData">
            <p>Tài khoản</p>
            <input id="txtUsername" type="text" name="username" placeholder="Nhập tài khoản">
            <p>Mật khẩu</p>
            <input id="txtPassword" type="password" name="password" placeholder="Nhập mật khẩu">
            <p>Nhập lại mật khẩu</p>
            <input id="txtRePassword" type="password" name="repassword" placeholder="Nhập lại mật khẩu">
            <p>Email</p>
            <input id="txtEmail" type="text" name="email" placeholder="Nhập Email">
        </form>
        <button id="btnSign">Đăng kí</button>
        <p class="txtBottom"><a href="/Login/Index">Đăng nhập</a></p>
    </div>
    <script src="/Assets/admin/vendor/jquery/jquery.min.js"></script>
    <script src="/Assets/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Assets/admin/js/plugins/bootbox.min.js"></script>
    <script src="~/Assets/web/controller/registerController.js"></script>
</body>
</html>