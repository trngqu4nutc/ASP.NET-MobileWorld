@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh sách người dùng.
}

<div class="row">
    <div class="col-lg-12">
        <div class="card mb-3">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-4">
                        <i class="fas fa-table"></i>
                        <b id="total"></b>
                    </div>
                    <div class="col-md-4">
                        <div class="fa-pull-right">
                            <input type="text" class="form-control" id="txtSeach" name="seachUser" placeholder="Tìm kiếm" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <select id="slSeach" class="form-control">
                            <option value="">All</option>
                            <option value="true">Active</option>
                            <option value="false">Looked</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button id="btnSeach" class="btn btn-info"><i class="fas fa-search"></i></button>
                        <button id="btnReset" class="btn btn-secondary"><i class="fas fa-redo"></i></button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Tài khoản</th>
                                <th>Họ tên</th>
                                <th>Email</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th>Trạng thái</th>
                                <th>Quyền</th>
                                <th><button id="btnAdd" class="btn btn-success"><i class="fas fa-user-plus"></i></button></th>
                            </tr>
                        </thead>
                        <tbody id="tblData"></tbody>
                    </table>
                    <div id="pagination" class="pagination">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script id="data-template" type="x-tmpl-mustache">
    <tr>
        <td>{{id}}</td>
        <td>{{username}}</td>
        <td>{{fullname}}</td>
        <td>{{{email}}}</td>
        <td>{{phonenumber}}</td>
        <td>{{address}}</td>
        <td>{{{status}}}</td>
        <td>{{role}}</td>
        <td>
            <button data-id="{{id}}" class="btnEdit btn btn-sm btn-info"><i class="fas fa-edit"></i></button>
        </td>
    </tr>
</script>

